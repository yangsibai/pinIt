{
    "manifest_version": 2,
    "name": "page mark",
    "version": "0.0.1",
    "description": "add mark on web page",
    "permissions": [
        "storage",
        "tabs",
        "bookmarks",
        "http://*/*",
        "https://*/*",
        "notifications"
    ],
    "icons": {
        "16": "/imgs/logo/16.png",
        "24": "/imgs/logo/24.png",
        "48": "/imgs/logo/48.png",
        "128": "/imgs/logo/128.png"
    },
    "minimum_chrome_version": "6.0.0.0",
    "browser_action": {
        "default_icon": "/imgs/logo/24.png",
        "default_title": "mark this page"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "css": ["/css/style.css"],
            "js": ["/js/jquery-2.0.3.min.js", "/js/contentScripts.js"]
        }
    ],
    "background": {
        "scripts": [
            "/js/background.js"
        ]
    },
    "web_accessible_resources":[
        "/imgs/logo/20.png",
        "/imgs/logo/32.png"
    ]
}
